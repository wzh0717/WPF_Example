<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d" Height="400" Width="600" ResizeMode="NoResize" Icon="Tiger.ico" Title="用户登录" WindowStartupLocation="CenterScreen" MinWidth="600" MinHeight="400">
   <!---Grid布局-->
    <Grid>
        <!--四行两列-->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontWeight="Bold" Grid.Row="1" Grid.Column="1" Text="用户名：" Margin="5" HorizontalAlignment="Right"  VerticalAlignment="Center" Height="20"/>
        <TextBox Grid.Row="1" Grid.Column="2" Margin="5" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30"/>
        <TextBlock FontWeight="Bold" Text="密码：" Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Right"  VerticalAlignment="Center" Height="20"/>
        <PasswordBox Grid.Row="2" Grid.Column="2" Margin="5" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" MaxLength="18"/>
        <TextBlock FontWeight="Bold" Text="验证码：" Grid.Row="3" Grid.Column="1" Margin="5" HorizontalAlignment="Right"  VerticalAlignment="Center" Height="20"/>
        <TextBox Grid.Row="3" Grid.Column="2" Margin="5" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="登录" x:Name="btnLogin"  Grid.Row="4" Grid.Column="2" Width="100" Height="30" HorizontalAlignment="Right" Margin="5"/>
        <Button x:Name="btnCancel" Content="取消" Grid.Row="4" Grid.Column="3" Width="100" Height="30"  HorizontalAlignment="Left" Margin="5"/>
